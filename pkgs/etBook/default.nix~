{ fetchFromGitHub }:
let
  name = "tufte-css";
  version = "v1.7.2";
in fetchFromGitHub {
  owner = "edwardtufte";
  repo = name;
  rev = version;
  sha256 = "09fa8fff3ae65ea77089b17a270221d016d7df5c6093ef36357572235e36c7cb";
  postFetch = ''
    tar xvf $downloadedFile
    mkdir -p $out/share/fonts/truetype
    cp ${name}-${version}/et-book/et-book-roman-line-figures/*.ttf $out/share/fonts/truetype
  '';
}
