{
  "title": "Alex Keyboard Autism",
  "author": "Alex Eyre(hi@alexey.re)",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/alex-eyre/-/master/macos/keyboard.json",
  "rules": [
    {
      "description": "CapsLock -> Control/Escape in Emacs",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.gnu\\.Emacs$"]
            }
          ]
        }
      ]
    },
    {
      "description": "CapsLock -> Hyper/Escape otherwise",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "modifiers": ["left_command", "left_option", "left_shift"],
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^org\\.gnu\\.Emacs$"]
            }
          ]
        }
      ]
    },
    {
      "description": "CapsLock + hjkl -> Arrow Keys",
      "manipulators": [
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "optional": ["any"],
              "mandatory": [
                "left_control",
                "left_command",
                "left_option",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "optional": ["any"],
              "mandatory": [
                "left_control",
                "left_command",
                "left_option",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "c",
            "modifiers": {
              "optional": ["any"],
              "mandatory": [
                "left_control",
                "left_command",
                "left_option",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "v",
            "modifiers": {
              "optional": ["any"],
              "mandatory": [
                "left_control",
                "left_command",
                "left_option",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
